<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A first"
            android:id="@+id/button" android:layout_gravity="center_horizontal"
            android:onClick="aFirst"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B First"
            android:id="@+id/button2" android:layout_gravity="center_horizontal"
            android:onClick="bFirst"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView2" android:layout_gravity="right"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="print"
            android:id="@+id/button3" android:layout_gravity="center_horizontal"
            android:onClick="printResults"/>
</LinearLayout>

