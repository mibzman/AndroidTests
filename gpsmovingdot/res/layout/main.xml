<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/Start"
            android:layout_below="@+id/imageView2" android:layout_centerHorizontal="true"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/nothermap"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/theDot"
            android:src="@drawable/thenewdot"
            android:layout_alignBottom="@+id/imageView2" android:layout_toStartOf="@+id/Start"
            android:layout_marginEnd="48dp" android:layout_marginBottom="82dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView" android:layout_below="@+id/Start" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/distance" android:layout_below="@+id/textView" android:layout_centerHorizontal="true"/>
</RelativeLayout>