<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#2a37b1">

    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/Start"
            android:layout_below="@+id/imageView2" android:layout_centerHorizontal="true"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/nothermap"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wizard"
            android:src="@drawable/thenewdot"
            android:layout_marginBottom="76dp"
            android:layout_marginEnd="52dp"
            android:layout_alignBottom="@+id/imageView2" android:layout_toStartOf="@+id/Start"/>
</RelativeLayout>